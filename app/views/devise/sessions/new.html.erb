<div class="top">
    <div class="header">
        <div class="header_icon">
            <h1 class="icon">Daita</h1>
        </div>
        <div class="devise">
            <div class="select-boxes">
                <%= link_to "TOP", root_path, class: "select-box" %>
                <%= link_to "新規登録", new_user_registration_path, class: "select-box" %>
            </div>
        </div>
    </div>
    <div class="devise_background">
      <h1>ログイン</h1>
      <div class="field-input">
        <%= form_with model: @user, url: user_session_path, local: true do |f| %>
          <div class="field">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class: "field_box" %>
          </div>

          <div class="field">
            <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード", class: "field_box" %>
          </div>

          <div class="actions">
            <%= f.submit "Log in", id: "field_btn" %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="footer">
    </div>
</div>







