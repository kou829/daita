<div class="top">
    <div class="header">
        <div class="header_icon">
            <h1 class="icon">Daita</h1>
        </div>
        <div class="devise">
            <div class="select-boxes">
                  <%= link_to current_user.nickname, '#', class: "select-box" %>
                  <%= link_to "TOP", root_path, class: "select-box" %> 
                
            </div>
        </div>
    </div>
    <div class="main">
        <%= form_with model: @agenda, url: agendaes_path, local: true do |f| %>
            <div class="create_agenda">
                <div class="input_title">
                  <div class="create_field">
                    <%= f.text_field :title, placeholder: "タイトル", class: "create_field_box" %>
                  </div>
                </div>
                <div class="input_catch_copy">
                  <div class="create_field">
                    <%= f.text_area :catch_copy, placeholder: "概要", class: "create_text_box" %>
                  </div>
                </div>
                <div class="create_actions">
                    <%= f.submit "投稿", class: "create_btn" %>
                </div>
            </div>
        <% end %>
    </div>
</div>

